<odoo>
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="full_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="age"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="full_name" readonly="1"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="date_of_birth"/>
                        <field name="age" readonly="1"/>
                        <field name="department_id"/>
                        <field name="shift_start"/>
                        <field name="shift_end"/>
                    </group>

                    <group>
                        <field name="street"/>
                        <field name="street2"/>
                        <field name="city"/>
                        <field name="state_id"/>
                        <field name="zip"/>
                        <field name="country_id"/>
                        <field name="company_id"/>
                    </group>

                    <field name="portrait" widget="image" class="oe_avatar"/>

                    <!-- Adding the user_id field, it will be invisible for the user -->
                    <field name="user_id" invisible="1"/>

                    <!-- Smart button to view user -->
                    <button name="action_view_user" type="object" string="View User" class="btn-primary"
                            attrs="{'invisible': [('user_id', '=', False)]}"/>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
